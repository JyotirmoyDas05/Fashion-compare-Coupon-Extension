
{
  "manifest_version": 3,
  "name": "SimplyShop",
  "version": "1.0",
  "description": "Streamlines online fashion shopping with product comparison and coupon aggregation.",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
